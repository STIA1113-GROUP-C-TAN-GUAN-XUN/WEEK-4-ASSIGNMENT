package assignment;

import java.util.Scanner;

public class Assignment1B {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner (System.in);
		
		System.out.println("Enter the yearly interest rate: ");
		double a = sc.nextDouble();
		
		System.out.println("Enter number of years: ");
		int b = sc.nextInt();
		
		System.out.println("Enter total loan amount: ");
		int c = sc.nextInt();
		
		int total_month = b * 12;
		double monthly_payment = (int) ((a/100) * c);
		System.out.println("The monthly interest payment is $" + monthly_payment);
		
		double total = (monthly_payment * total_month) ;
		System.out.printf("The total payment is $" + total);
		
	}

}
